{
  "name": "Anime LGTM",
  "description": "Display a list of animated LGTM images",
  "version": "0.1",
  "author": "akinov",
  "permissions": [
    "tabs",
    "storage",
    "clipboardRead"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "Anime LGTM",
    "default_popup": "popup.html"
  },
  "content_scripts" : [{
    "matches" : ["*://*/*"],
    "js" : [
      "javascripts/lib/jquery.js",
      "javascripts/content.js"
    ]
  }],
  "manifest_version": 2
}
